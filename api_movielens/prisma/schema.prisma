generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Movie {
  id      Int      @id @default(autoincrement())
  title   String
  year    Int
  genres  Genre[]
  ratings Rating[]
  tags    Tag[]
  links   Link?
}

model Rating {
  id        Int      @id @default(autoincrement())
  userId    Int
  movieId   Int
  rating    Float
  timestamp DateTime
  movie     Movie    @relation(fields: [movieId], references: [id])
}

model Genre {
  id    Int    @id @default(autoincrement())
  name  String @unique
  movies Movie[]
}

model Tag {
  id        Int      @id @default(autoincrement())
  userId    Int
  movieId   Int
  tag       String
  timestamp DateTime
  movie     Movie    @relation(fields: [movieId], references: [id])
}

model Link {
  id      Int    @id @default(autoincrement())
  movieId Int    @unique
  imdbId  String
  tmdbId  Int?
  movie   Movie  @relation(fields: [movieId], references: [id])
}